<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/boardgame_image"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="left"
            />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/boardgame_id"
                android:layout_width="108dp"
                android:layout_height="match_parent"

                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/boardgame__date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"

                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/boardgame_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/boardgame_tags"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/boardgame_bottom"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <CheckBox
                android:id="@+id/boardgame_Collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/like222"
                android:button="@null"
                android:focusable="false" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>