<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/my1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.My_characteristicActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="288dp"
        android:layout_height="108dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/my1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/my_imageView"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/llv" />

        <TextView
            android:id="@+id/My_name"
            android:layout_width="146dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="     昵称：lxy"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/My_age"
            android:layout_width="183dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="    码龄：1"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="393dp"
        android:layout_height="395dp"
        android:layout_above="@+id/linearLayout7"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="-99dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="-76dp"
        android:background="@drawable/my1"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/My_text_say"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/My_says"
            android:layout_width="403dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="我命由我，不由天！"
            android:textColor="#E91E63" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/my_collect_button3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/cat1" />

                <Button
                    android:id="@+id/Collect_textView6"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_button"
                    android:text="收藏" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/my_share_button3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/cat1" />

                <Button
                    android:id="@+id/textView9"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_button"
                    android:text="分享" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/my_my_button3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"

                    android:background="@drawable/cat1" />

                <Button
                    android:id="@+id/textView13"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_button"
                    android:text="个人" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="711dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/List_radioButton8"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:button="@null"
                android:gravity="center_horizontal"
                android:text=" " />

            <RadioButton
                android:id="@+id/List_radioButton9"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:button="@null"
                android:gravity="center_horizontal"
                android:text=" " />

            <RadioButton
                android:id="@+id/List_Guang_radioButton10"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:button="@null"
                android:gravity="center_horizontal"
                android:text=" " />

            <RadioButton
                android:id="@+id/List_radioButton123"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:button="@null"
                android:gravity="center_horizontal"
                android:text=" " />

            <RadioButton
                android:id="@+id/List_radioButton11"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:button="@null"
                android:gravity="center_horizontal"
                android:text=" " />
        </RadioGroup>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" 首页" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="问答" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="广场" />

            <TextView
                android:id="@+id/textView133"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="体系" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="个人" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>